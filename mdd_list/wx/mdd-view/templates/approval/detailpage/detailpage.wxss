:host {
  width: 100%;
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: stretch;
  background-color: #f5f5f5;
}

.space {
  height: 10px;
}

/* modal */

/* 人员信息 */

.modal-content-userinfo {
  display: flex;
  flex-direction: column;
  align-items: stretch;
  padding: 0 15px;
}

.modal-content-userinfo .row {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  font-family: 'PingFangSC-Light';
  font-size: 15px;
  color: #333;
}

.modal-content-userinfo .row .title {
  min-width: 64px;
}

.modal-content-userinfo .row .content {
  flex-grow: 1;
  width: 0;
  margin-left: 8px;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -moz-box-orient: vertical;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.phone {
  color: cornflowerblue;
}