:host {
  width: 100%;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  background-color: white;
}

.row {
  display: flex;
  flex-direction: row;
  min-height: 52rpx;
  font-family: PingFangSC-Light, helvetica, 'Heiti SC';
  font-size: 28rpx;
}

.row .title {
  width: 168rpx;
  text-align: right;
  color: darkgray;
}

.row .content {
  color: black;
  margin-left: 32rpx;
}