:host {
  width: 100%;
  height: 100%;
}

.container {
  width: auto;
  height: 100%;
  transform: translate(0px, -60px);
  padding-top: 10px;
  padding-left: 10px;
  padding-right: 10px;
}

.scroll {
  width: 100%;
  height: calc(100% - 10px);
}

.refresh {
  display: flex;
  height: 60px;
  align-items: center;
  justify-content: center;
  z-index: 50;
}

.refresh image {
  width: 55rpx;
  height: 100%;
  max-height: 20rpx;
}

.row {
  margin-bottom: 10px;
  min-height: 20px;
  padding: 10px;
  background: #fff;
  border-radius: 8px;
  display: flex;
  flex-direction: column;
  align-items: left;
}

.row .title {
  font-size: 16px;
  color: #333;
  font-family: "PingFangSC-Light";
}

.row .content {
  margin-top: 16rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: stretch;
}

.row .content .date {
  font-size: 12px;
  color: #999;
  font-family: "PingFangSC-Light";
  flex-grow: 1;
}

.row .content .btn-area {
  float: right;
  display: flex;
  flex-direction: row;
  align-items: stretch;
}

.row .content .btn-area .button {
  margin-left: 16rpx;
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 14px;
  border-radius: 10rpx;
  border: 1rpx solid #E14C46;
  background-color: #fff;
  color: #E14C46;
}

.row .content .btn-area .button.agreeBtn {
  border: none;
  background-color: #E14C46;
  color: #fff;
}

.footer {
  color: #999;
  text-align: center;
  font-size: 24rpx;
  line-height: 52px;
}

.none {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100%;
}

.none-place {
  height: 0;
  flex-grow: 1;
}

.none-image {
  width: 340rpx;
  height: 230rpx;
}

.none-text {
  color: #999;
  text-align: center;
  font-size: 12px;
  line-height: 64px;
}