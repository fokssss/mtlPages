:host {
  width: 100%;
}

.container {
  padding: 10px;
  padding-top: 0;
  background-color: white;
}

.content {
  min-height: 120;
  display: flex;
  flex-direction: row;
  align-items: stretch;
}

.content .line-block {
  width: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.content .line-block .dot {
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  background: #00b39e;
}

.content .line-block .line {
  width: 4rpx;
  height: 0;
  flex-grow: 1;
  background-color: #d7d7d7;
}

.content .name {
  margin-left: 16rpx;
  width: 0;
  flex-grow: 1;
  font-size: 28rpx;
  color: #595959;
  align-self: center;
}

.content .action {
  margin-left: 16rpx;
  width: 0;
  font-size: 28rpx;
  flex-grow: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.content .action .default {
  color: #595959;
}

.content .action .agree {
  color: #00b39e;
}

.content .action .reject {
  color: #ed4014;
}

.content .action .note {
  color: #595959;
  min-height: 40rpx;
}

.content .date {
  float: right;
  align-self: flex-start;
  margin-top: 44rpx;
  width: 140rpx;
  text-align: right;
  color: #9e9e9e;
  font-size: 24rpx;
}

.hidden {
  visibility: hidden;
}