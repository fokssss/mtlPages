:host {
  width: 100%;
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: stretch;
  background-color: #f5f5f5;
}

.header {
  height: 40px;
  background-color: white;
  z-index: 75;
}

.table-area {
  flex-grow: 1;
}

.table {
  position: fixed;
  width: 100%;
  height: calc(100% - 40px);
}

.hidden {
  display: none;
}

.modal-content {
  display: flex;
  flex-direction: column;
  align-items: stretch;
  padding: 0 15px;
}

.modal-textarea {
  height: 88px;
  width: auto;
  background: #fff;
  padding: 10rpx;
  border: 2rpx solid #ddd;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
}